{
  "description": "Oil & Gas Production Time Series Forecasting Dataset",
  "time_series_types": {
    "oil_production": {
      "unit": "barrels_per_day",
      "baseline": 2500,
      "seasonal_amplitude": 200,
      "trend_slope": -0.5,
      "noise_level": 50,
      "seasonal_period": 365
    },
    "gas_production": {
      "unit": "mcf_per_day",
      "baseline": 15000,
      "seasonal_amplitude": 1500,
      "trend_slope": 0.8,
      "noise_level": 300,
      "seasonal_period": 365
    },
    "water_cut": {
      "unit": "percentage",
      "baseline": 35,
      "seasonal_amplitude": 5,
      "trend_slope": 0.02,
      "noise_level": 2,
      "seasonal_period": 365
    },
    "wellhead_pressure": {
      "unit": "psi",
      "baseline": 1200,
      "seasonal_amplitude": 100,
      "trend_slope": -0.3,
      "noise_level": 25,
      "seasonal_period": 365
    },
    "reservoir_temperature": {
      "unit": "fahrenheit",
      "baseline": 180,
      "seasonal_amplitude": 15,
      "trend_slope": 0.01,
      "noise_level": 3,
      "seasonal_period": 365
    }
  },
  "external_factors": {
    "weather_temperature": {
      "unit": "celsius",
      "baseline": 25,
      "seasonal_amplitude": 20,
      "influence_on_production": 0.1
    },
    "market_price": {
      "unit": "usd_per_barrel",
      "baseline": 70,
      "volatility": 10,
      "influence_on_production": 0.05
    },
    "maintenance_schedule": {
      "frequency": "monthly",
      "duration": 2,
      "impact_reduction": 0.15
    }
  },
  "anomaly_patterns": {
    "equipment_failure": {
      "probability": 0.02,
      "duration_days": [3, 7],
      "production_impact": [-0.8, -0.3]
    },
    "planned_shutdown": {
      "probability": 0.01,
      "duration_days": [1, 3],
      "production_impact": [-1.0, -0.9]
    },
    "weather_disruption": {
      "probability": 0.005,
      "duration_days": [1, 5],
      "production_impact": [-0.6, -0.2]
    }
  },
  "forecasting_config": {
    "sequence_length": 30,
    "prediction_horizon": [1, 7, 30],
    "features": ["oil_production", "gas_production", "water_cut", "wellhead_pressure", "reservoir_temperature"],
    "external_features": ["weather_temperature", "market_price"],
    "target_variable": "oil_production"
  },
  "data_generation": {
    "total_days": 1095,
    "start_date": "2021-01-01",
    "sampling_frequency": "daily",
    "missing_data_rate": 0.01,
    "outlier_rate": 0.005
  },
  "model_architectures": {
    "lstm_config": {
      "hidden_size": 64,
      "num_layers": 2,
      "dropout": 0.2,
      "bidirectional": false
    },
    "gru_config": {
      "hidden_size": 64,
      "num_layers": 2,
      "dropout": 0.2
    },
    "transformer_config": {
      "d_model": 64,
      "nhead": 8,
      "num_layers": 3,
      "dropout": 0.1
    }
  },
  "evaluation_metrics": {
    "primary": ["MAE", "RMSE", "MAPE"],
    "secondary": ["R2", "directional_accuracy", "peak_detection"]
  },
  "metadata": {
    "created_for": "Experiment 6 - Time Series Forecasting",
    "domain": "Oil & Gas Production Forecasting",
    "task": "Multi-step time series prediction",
    "business_value": "Production optimization and maintenance planning"
  }
}
