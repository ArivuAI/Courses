  "bayesian_network_context": {
    "what_is_bayesian_network": "A probabilistic graphical model that represents variables and their conditional dependencies via a directed acyclic graph (DAG)",
    "key_concepts": [
      "Nodes represent random variables",
      "Edges represent probabilistic dependencies",
      "Each node has a conditional probability table (CPT)",
      "Allows reasoning under uncertainty",
      "Supports both forward (prediction) and backward (diagnosis) inference"
    ],
    "advantages": [
      "Handles uncertainty naturally",
      "Combines prior knowledge with data",
      "Explains reasoning process",
      "Works with incomplete data",
      "Supports causal reasoning"
    ],
    "applications": [
      "Medical diagnosis",
      "Spam filtering",
      "Risk assessment",
      "Fault diagnosis",
      "Decision support systems"
    ]
  },
  
  "real_world_analogy": {
    "title": "Doctor's Diagnosis Process",
    "description": "Just like a doctor considers multiple factors (season, age, vaccination, symptoms) to diagnose a disease, a Bayesian Network combines probabilities to make informed predictions",
    "example": "If it's winter, patient is elderly, not vaccinated, has fever and breathing difficulty → high probability of COVID-19 or Flu"
  },
  
  "inference_types": {
    "predictive_inference": {
      "description": "Predict effects given causes",
      "example": "Given: Patient has Flu → Predict: Probability of fever, cough, fatigue"
    },
    "diagnostic_inference": {
      "description": "Infer causes given effects",
      "example": "Given: Patient has fever, cough, fatigue → Diagnose: Probability of Flu, COVID-19, etc."
    },
    "intercausal_inference": {
      "description": "Reasoning between causes",
      "example": "Given: Patient has fever AND is vaccinated → Update: Lower probability of Flu"
    }
  },
  
  "learning_objectives": [
    "Understand Bayesian Network structure (DAG)",
    "Learn conditional probability tables (CPTs)",
    "Implement Bayes' Theorem for inference",
    "Calculate posterior probabilities",
    "Perform diagnostic reasoning",
    "Visualize network structure",
    "Handle uncertainty in predictions",
    "Apply to real-world medical diagnosis"
  ],
  
  "mathematical_foundation": {
    "bayes_theorem": "P(Disease|Symptoms) = P(Symptoms|Disease) × P(Disease) / P(Symptoms)",
    "joint_probability": "P(X1, X2, ..., Xn) = ∏ P(Xi | Parents(Xi))",
    "chain_rule": "P(A, B, C) = P(A) × P(B|A) × P(C|A,B)",
    "marginalization": "P(X) = Σ P(X, Y) for all values of Y"
  }
}

