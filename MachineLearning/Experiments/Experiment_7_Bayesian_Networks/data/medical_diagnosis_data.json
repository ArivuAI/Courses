        "states": ["Vaccinated", "Not_Vaccinated"],
        "parents": []
      },
      {
        "name": "Disease",
        "type": "intermediate",
        "description": "Actual disease (hidden variable)",
        "states": ["Flu", "COVID-19", "Common_Cold", "Allergies", "None"],
        "parents": ["Season", "Age_Group", "Vaccination_Status"]
      },
      {
        "name": "Fever",
        "type": "symptom",
        "description": "Body temperature > 100.4°F",
        "states": ["Yes", "No"],
        "parents": ["Disease"]
      },
      {
        "name": "Cough",
        "type": "symptom",
        "description": "Persistent coughing",
        "states": ["Yes", "No"],
        "parents": ["Disease"]
      },
      {
        "name": "Fatigue",
        "type": "symptom",
        "description": "Extreme tiredness",
        "states": ["Yes", "No"],
        "parents": ["Disease"]
      },
      {
        "name": "Breathing_Difficulty",
        "type": "symptom",
        "description": "Shortness of breath",
        "states": ["Yes", "No"],
        "parents": ["Disease"]
      },
      {
        "name": "Runny_Nose",
        "type": "symptom",
        "description": "Nasal congestion/discharge",
        "states": ["Yes", "No"],
        "parents": ["Disease"]
      }
    ],
    "edges": [
      ["Season", "Disease"],
      ["Age_Group", "Disease"],
      ["Vaccination_Status", "Disease"],
      ["Disease", "Fever"],
      ["Disease", "Cough"],
      ["Disease", "Fatigue"],
      ["Disease", "Breathing_Difficulty"],
      ["Disease", "Runny_Nose"]
    ]
